---
import Container from "./Container.astro"

const socialLinks =
[
    {
      label:'instagram',
      name:'instagram.svg'
    },
    {
      label:'facebook',
      name:'facebook.svg'
    },
    {
      label:'twitter',
      name:'twitter.svg'
    },
    {
      label:'pinterest',
      name:'pinterest.svg'
    },
]
---

<Container>
    <footer class="flex flex-col items-center mt-16 ">

        <div class=" flex flex-row gap-x-8 ">
        {socialLinks.map(({label,name})=>(
            <a href="#" aria-label={label} class="transition-all duration-500 hover:scale-125"><img src={name} alt=""></a>
        ))}
        </div>
    </footer>
    <section class="my-16">
        <ul class="flex flex-row gap-x-16 justify-center">
            <li>
              <a
                href="#"
                class="text-white transition duration-500 hover:text-primary"
                >Privacy Policy</a
              >
            </li>
            <li>
              <a
                href="#"
                class="text-white transition duration-500 hover:text-primary"
                >Terms of Service</a
              >
            </li>

          </ul>
    </section>
</Container>

