---
import Container from "./Container.astro"

const partner =
[
    {
        image:'danial.webp',
        name:'Danial Def',
        cases:'301 cases'
    },
    {
        image:'sanfole.webp',
        name:'Sanfole',
        cases:'850 cases'
    },
    {
        image:'cesforila.webp',
        name:'Cesforila',
        cases:'470 cases'
    },
    {
        image:'collen.webp',
        name:'Collen',
        cases:'180 cases'
    },
    {
        image:'haldone.webp',
        name:'Haldone',
        cases:'212 cases'
    },
    {
        image:'nik.webp',
        name:'Nik Jeo',
        cases:'350 cases'
    }
